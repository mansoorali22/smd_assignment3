<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookingMentorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/lightblue_theme"
    android:padding="15dp"
    >
    <!-- Add views dynamically here if needed -->

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"

        android:orientation="vertical"
        android:paddingLeft="7dp"

        android:paddingRight="7dp"
        android:gravity="bottom"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profilepic"
            android:id="@+id/profilepic"
            android:background="@drawable/text_boarder"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/home_options"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/click"

        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/home_options"
            android:layout_weight="2.6"
            android:orientation="vertical"


            >
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Cooper"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ux designer@Google"
                android:textSize="14dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="114dp"
            android:layout_height="50dp"
            android:background="@drawable/home_options"

            android:orientation="vertical"


            >
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24th Dec 2023"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="#EAD736"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:00 PM"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="#EAD736"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
