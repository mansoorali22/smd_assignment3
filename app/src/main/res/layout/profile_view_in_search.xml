<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/profileforsearch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    >
    <!-- Add views dynamically here if needed -->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/imagebox"
        android:orientation="vertical"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:gravity="bottom"
        android:id="@+id/profilepic"
        >
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/text_boarder"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="10dp"

        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/text_boarder"
            android:layout_weight="2.7"
            android:orientation="vertical"


            >
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Cooper"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ux designer@Google"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/avail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="13dp"
                android:textColor="#4EDF54"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="114dp"
            android:layout_height="50dp"
            android:background="@drawable/text_boarder"

            android:gravity="center"
            android:orientation="vertical"


            >
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1500/session"
                android:textSize="12dp"
                android:textColor="#EAD736"/>
            <ImageView  android:id="@+id/like"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_e"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>