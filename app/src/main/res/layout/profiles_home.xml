<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="match_parent"

    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="9dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/imagebox"
    android:orientation="vertical"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:id="@+id/profileforsearch"
    android:gravity="bottom">

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:background="@drawable/text_boarder"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/text_boarder"
                android:layout_weight="1.1"
                android:gravity="top"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12dp"
                    android:id="@+id/name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="11dp"
                    android:id="@+id/disc"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textSize="10dp"
                    android:textColor="#4EDF54"
                    android:id="@+id/avail"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/text_boarder"
                android:layout_weight="0.9"
                android:gravity="top"

                android:orientation="vertical"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1500/session"
                    android:textSize="10dp"
                    android:textColor="#EAD736"
                    android:id="@+id/price"/>
                <ImageView  android:id="@+id/like"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heart_e"/>

            </LinearLayout>

        </LinearLayout>
</LinearLayout>
</LinearLayout>