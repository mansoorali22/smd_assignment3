<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9EAE5"
    android:orientation="vertical">

    <!-- Main content layout -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@drawable/arrow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forget Password?"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#279187"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donâ€™t worry! It happens. Please enter the
email associated with your account."
                    android:layout_marginLeft="27dp"
                    android:paddingRight="25dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textColor="#191818"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:paddingBottom="4dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_boarder"
                    android:hint="Enter Email"

                    android:inputType="textEmailAddress"
                    android:minHeight="40dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="4dp"
                    android:textSize="16sp" />

                <Button android:id="@+id/send"
                    android:layout_width="170dp"
                    android:layout_height="55dp"

                    android:backgroundTint="#0F5C55"

                    android:text="Send"

                    android:layout_marginTop="35dp"
                    android:layout_gravity="center"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remember your password? "

                            android:textStyle="bold"
                            android:padding="7dp"
                            android:layout_gravity="bottom"
                            android:textSize="17sp"

                            />

                        <TextView
                            android:id="@+id/login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:clickable="true"

                            android:linksClickable="true"
                            android:minWidth="48dp"

                            android:minHeight="48dp"
                            android:text="Login"
                            android:textColor="#054867"
                            android:textSize="17sp"
                            android:padding="6dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>






</LinearLayout>
