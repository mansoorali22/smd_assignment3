<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9EAE5"
    android:orientation="vertical"
    android:weightSum="2">

    <!-- Main content layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.1">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/arrow"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify your phone number"

            android:layout_marginTop="5dp"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="#0F5C55"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We've sent a code to"


            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="#191818"

            />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" +92 321 2242022"

                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textColor="#13776D"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="7dp"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:strokeColor="#009688"
                    app:strokeWidth="2dp"
                    android:id="@+id/v1"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:strokeColor="#009688"
                    app:strokeWidth="2dp"
                    android:id="@+id/v2"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:strokeColor="#009688"
                    app:strokeWidth="2dp"
                    android:id="@+id/v3"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:strokeColor="#009688"
                    app:strokeWidth="2dp"
                    android:id="@+id/v4"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"

                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:strokeColor="#009688"
                    app:strokeWidth="2dp"
                    android:id="@+id/v5"/>
            </LinearLayout>
            <Button android:id="@+id/verify"
                android:layout_width="190dp"
                android:layout_height="55dp"

                android:backgroundTint="#0F5C55"

                android:text="Verify"

                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send code again"

                    android:layout_marginTop="10dp"
                    android:textSize="17dp"
                    android:textColor="#191818"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 00:20"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="17dp"
                    android:textColor="#13776D"

                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:layout_weight="0.9"
    android:background="#439F97"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/home_options"
            android:gravity="center"
            android:text="1"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:id="@+id/a1"
            />
        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/home_options"
            android:gravity="center"
            android:text="2"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:id="@+id/a2"
            />
        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/home_options"
            android:gravity="center"
            android:text="3"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:id="@+id/a3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/home_options"
            android:gravity="center"
            android:text="4"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:id="@+id/a4"
            />
        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/home_options"
            android:gravity="center"
            android:text="5"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:id="@+id/a5"
            />
        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/home_options"
            android:gravity="center"
            android:text="6"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:id="@+id/a6"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/home_options"
            android:gravity="center"
            android:text="7"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:id="@+id/a7"
            />
        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/home_options"
            android:gravity="center"
            android:text="8"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:id="@+id/a8"
            />
        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/home_options"
            android:gravity="center"
            android:text="9"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:id="@+id/a9"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"

            android:gravity="center"

            android:textSize="40dp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/home_options"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:id="@+id/a0"/>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="75dp"

            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:id="@+id/a">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="75dp"

            android:src="@drawable/erase"
            />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>



</LinearLayout>
