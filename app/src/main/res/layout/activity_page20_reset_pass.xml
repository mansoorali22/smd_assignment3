<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9EAE5"
    android:orientation="vertical">

    <!-- Main content layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password?"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#279187"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please type a new password and re-enter the
password. Type something you will
remember!"
            android:layout_marginLeft="27dp"
            android:paddingRight="25dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="#191818"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:paddingBottom="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#302F2F"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_boarder"
                android:hint="Enter New Password"
                android:inputType="textPassword"
                android:minHeight="40dp"
                android:paddingLeft="16dp"
                android:paddingBottom="4dp"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:layout_marginTop="25dp"
                android:paddingBottom="4dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#302F2F"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_boarder"
                android:hint="Enter New Password"
                android:inputType="textPassword"
                android:minHeight="40dp"
                android:paddingLeft="16dp"
                android:paddingBottom="4dp"
                android:textSize="16sp" />

            <Button android:id="@+id/reset"
                android:layout_width="190dp"
                android:layout_height="55dp"

                android:backgroundTint="#0F5C55"

                android:text="Reset Password"

                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't want to reset password? "

                    android:textStyle="bold"

                    android:layout_gravity="bottom"
                    android:textSize="16sp"

                    />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:clickable="true"

                    android:linksClickable="true"
                    android:minWidth="48dp"

                    android:minHeight="48dp"
                    android:text="Login"
                    android:textColor="#054867"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>






</LinearLayout>
