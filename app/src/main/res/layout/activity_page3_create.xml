<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"

    android:weightSum="7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="6"
        android:gravity="center"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-condensed"
            android:text="mentor"
            android:textColor="#2DA3AA"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="me"
            android:layout_gravity="bottom"
            android:textSize="50dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textColor="#FFC90A"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/boarder"
        android:padding="25dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started!"
            android:paddingBottom="4dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:paddingBottom="3dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_boarder"
            android:hint="Enter Name"

            android:inputType="text"
            android:minHeight="40dp"
            android:paddingLeft="16dp"
            android:paddingBottom="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:paddingBottom="3dp"

            android:textSize="18sp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_boarder"
            android:hint="Enter Email"

            android:inputType="textEmailAddress"
            android:minHeight="40dp"
            android:paddingLeft="16dp"
            android:paddingBottom="4dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:paddingBottom="3dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_boarder"
            android:hint="33312312312"

            android:inputType="number"
            android:minHeight="40dp"
            android:paddingLeft="16dp"
            android:paddingBottom="4dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:paddingBottom="1dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/coutry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_boarder"
                android:hint="Select Country"

                android:minHeight="30dp"
                android:maxHeight="35dp"
                android:paddingLeft="16dp"
                android:paddingBottom="4dp"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:paddingBottom="1dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/cityy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_boarder"
                android:hint="Select City"

                android:minHeight="30dp"
                android:maxHeight="35dp"
                android:paddingLeft="16dp"
                android:paddingBottom="4dp"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:paddingBottom="3dp"

            android:textSize="18sp"
            android:textColor="@color/white"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_boarder"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:minHeight="40dp"

            android:paddingStart="16dp"
            android:paddingBottom="4dp"
            android:textSize="16sp" /></com.google.android.material.textfield.TextInputLayout>

        <TextView android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pssword must be at least 8 characters long"
            android:clickable="true"
            android:textStyle="bold"


            android:textSize="13sp"
            android:textColor="@color/white"
            android:linksClickable="true"
            />
        <Button android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/text_boarder"

            android:text="Sign Up"
            android:paddingStart="35sp"
            android:paddingEnd="35sp"
            android:layout_marginTop="3sp"
          android:layout_marginBottom="3sp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"

                android:text="Already have an accout? "
                android:textColor="@color/white"

                android:textSize="13sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/loginC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="top"

                android:clickable="true"
                android:linksClickable="true"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="Log in"
                android:textColor="#054867"
                android:textSize="13sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>